# =============================================================================
# WORDPRESS MULTISITE DOCKER STACK - ENVIRONMENT CONFIGURATION
# =============================================================================

# ──────────────────────────────────────────────────────────────────────────────
# DATABASE CONFIGURATION
# ──────────────────────────────────────────────────────────────────────────────
WORDPRESS_DB_HOST=db
WORDPRESS_DB_NAME=wordpress
MYSQL_ROOT_PASSWORD=you-strong-complex-password
MARIADB_VERSION=11.5

# ──────────────────────────────────────────────────────────────────────────────
# REDIS CONFIGURATION  
# ──────────────────────────────────────────────────────────────────────────────
REDIS_VERSION=alpine

# ──────────────────────────────────────────────────────────────────────────────
# WORDPRESS INSTALLATION SETTINGS
# ──────────────────────────────────────────────────────────────────────────────
WORDPRESS_TITLE=WordPress Multisite
WORDPRESS_ADMIN_USER=admin
WORDPRESS_ADMIN_PASSWORD=securepassword123
WORDPRESS_ADMIN_EMAIL=admin@your-domain.com

# ──────────────────────────────────────────────────────────────────────────────
# WORDPRESS MULTISITE SETTINGS
# ──────────────────────────────────────────────────────────────────────────────
SUBDOMAIN_INSTALL=false
DOMAIN_CURRENT_SITE=your-domain.com
PATH_CURRENT_SITE=/
SITE_ID_CURRENT_SITE=1
BLOG_ID_CURRENT_SITE=1

# ──────────────────────────────────────────────────────────────────────────────
# NETWORK & EXPOSURE SETTINGS
# ──────────────────────────────────────────────────────────────────────────────
WORDPRESS_LOCAL_PORT=8080

# ──────────────────────────────────────────────────────────────────────────────
# PLUGIN INSTALLATION FLAGS
# ──────────────────────────────────────────────────────────────────────────────
# Set to false to skip specific plugins during installation
INSTALL_WORDFENCE=true
INSTALL_YOAST_SEO=true
INSTALL_CONTACT_FORM_7=true
INSTALL_WOOCOMMERCE=true
INSTALL_ELEMENTOR=true
INSTALL_GOOGLE_SITE_KIT=true
INSTALL_UPDRAFTPLUS=true
INSTALL_NS_CLONER=true
# Note: WP Super Cache is always installed (replaces WP Rocket)

# ──────────────────────────────────────────────────────────────────────────────
# UPLOAD LIMITS & PERFORMANCE SETTINGS
# ──────────────────────────────────────────────────────────────────────────────
# For high-resolution images and large files
UPLOAD_MAX_FILESIZE=64M
POST_MAX_SIZE=64M
MEMORY_LIMIT=256M
MAX_EXECUTION_TIME=300
MAX_INPUT_VARS=3000

# ──────────────────────────────────────────────────────────────────────────────
# WORDPRESS CORE SETTINGS
# ──────────────────────────────────────────────────────────────────────────────
# WordPress memory and performance
WP_MEMORY_LIMIT=256M
WP_MAX_MEMORY_LIMIT=256M

# WordPress debugging (set to true for development)
WP_DEBUG=false
WP_DEBUG_LOG=false

# WordPress caching
WP_CACHE=true

# ──────────────────────────────────────────────────────────────────────────────
# REDIS CACHING CONFIGURATION
# ──────────────────────────────────────────────────────────────────────────────
# Redis connection settings for WordPress
WP_REDIS_HOST=redis
WP_REDIS_PORT=6379
WP_REDIS_DATABASE=0
WP_REDIS_PASSWORD=

# ──────────────────────────────────────────────────────────────────────────────
# PHP CONFIGURATION OVERRIDES
# ──────────────────────────────────────────────────────────────────────────────
# PHP environment variables (used by WordPress image)
PHP_UPLOAD_MAX_FILESIZE=64M
PHP_POST_MAX_SIZE=64M
PHP_MEMORY_LIMIT=256M

# ──────────────────────────────────────────────────────────────────────────────
# SECURITY & MULTISITE SETTINGS
# ──────────────────────────────────────────────────────────────────────────────
# Multisite configuration
WP_ALLOW_MULTISITE=true

# =============================================================================
# NOTES & RECOMMENDATIONS
# =============================================================================
# 
# 1. REQUIRED CHANGES: Update MYSQL_ROOT_PASSWORD, DOMAIN_CURRENT_SITE, 
#    WORDPRESS_ADMIN_EMAIL with your actual values
#
# 2. UPLOAD LIMITS: The default 64MB is suitable for most high-resolution 
#    images. Increase if you need larger file uploads
#
# 3. MEMORY SETTINGS: 256MB is sufficient for most sites. Increase for 
#    complex themes or heavy plugin usage
#
# 4. REDIS: Redis caching is enabled by default for better performance
#
# 5. DEBUGGING: Set WP_DEBUG=true only in development environments
#
# ============================================================================= 